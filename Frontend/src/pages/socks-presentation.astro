    <style>
        .slide {
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.5s ease;
        }

        .slide.active {
            opacity: 1;
            pointer-events: auto;
        }

        /* Stretch Transition - Como estirar un calcet√≠n */
        .slide[data-transition="stretch"].transitioning-out {
            animation: stretchOut 0.8s ease-in-out forwards;
        }

        .slide[data-transition="stretch"].transitioning-in {
            animation: stretchIn 0.8s ease-in-out forwards;
        }

        @keyframes stretchOut {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scaleX(1.5) scaleY(0.5); opacity: 0.5; }
            100% { transform: scaleX(0) scaleY(2); opacity: 0; }
        }

        @keyframes stretchIn {
            0% { transform: scaleX(0) scaleY(2); opacity: 0; }
            50% { transform: scaleX(1.5) scaleY(0.5); opacity: 0.5; }
            100% { transform: scale(1); opacity: 1; }
        }

        /* Pair Transition - Como emparejar calcetines */
        .slide[data-transition="pair"].transitioning-out {
            animation: pairOut 0.8s ease-in-out forwards;
        }

        .slide[data-transition="pair"].transitioning-in {
            animation: pairIn 0.8s ease-in-out forwards;
        }

        @keyframes pairOut {
            0% { transform: translateX(0) rotate(0deg); opacity: 1; }
            100% { transform: translateX(-100%) rotate(-20deg); opacity: 0; }
        }

        @keyframes pairIn {
            0% { transform: translateX(100%) rotate(20deg); opacity: 0; }
            100% { transform: translateX(0) rotate(0deg); opacity: 1; }
        }

        /* Roll Transition - Como enrollar calcetines */
        .slide[data-transition="roll"].transitioning-out {
            animation: rollOut 0.8s ease-in-out forwards;
        }

        .slide[data-transition="roll"].transitioning-in {
            animation: rollIn 0.8s ease-in-out forwards;
        }

        @keyframes rollOut {
            0% { transform: rotate(0deg) scale(1); opacity: 1; }
            100% { transform: rotate(360deg) scale(0); opacity: 0; }
        }

        @keyframes rollIn {
            0% { transform: rotate(-360deg) scale(0); opacity: 0; }
            100% { transform: rotate(0deg) scale(1); opacity: 1; }
        }

        /* Slide Transition - Como deslizar un calcet√≠n */
        .slide[data-transition="slide"].transitioning-out {
            animation: slideOut 0.8s ease-in-out forwards;
        }

        .slide[data-transition="slide"].transitioning-in {
            animation: slideIn 0.8s ease-in-out forwards;
        }

        @keyframes slideOut {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(-100%); opacity: 0; }
        }

        @keyframes slideIn {
            0% { transform: translateY(100%); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }
    </style>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const slideIndicator = document.getElementById('slideIndicator');
        const progressBar = document.getElementById('progressBar');

        function updateSlide(newIndex) {
            if (newIndex < 0 || newIndex >= totalSlides) return;

            const currentSlideEl = slides[currentSlide];
            const newSlideEl = slides[newIndex];

            // Add transitioning classes
            currentSlideEl.classList.add('transitioning-out');
            newSlideEl.classList.add('transitioning-in');

            // Wait for animation to complete
            setTimeout(() => {
                currentSlideEl.classList.remove('active', 'transitioning-out');
                newSlideEl.classList.add('active');
                
                setTimeout(() => {
                    newSlideEl.classList.remove('transitioning-in');
                }, 50);

                currentSlide = newIndex;
                updateUI();
            }, 800);
        }

        function updateUI() {
            slideIndicator.textContent = `${currentSlide + 1} / ${totalSlides}`;
            progressBar.style.width = `${((currentSlide + 1) / totalSlides) * 100}%`;
            
            prevBtn.disabled = currentSlide === 0;
            nextBtn.disabled = currentSlide === totalSlides - 1;
            
            prevBtn.style.opacity = currentSlide === 0 ? '0.5' : '1';
            nextBtn.style.opacity = currentSlide === totalSlides - 1 ? '0.5' : '1';
        }

        prevBtn.addEventListener('click', () => {
            if (currentSlide > 0) {
                updateSlide(currentSlide - 1);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentSlide < totalSlides - 1) {
                updateSlide(currentSlide + 1);
            }
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                prevBtn.click();
            } else if (e.key === 'ArrowRight') {
                nextBtn.click();
            }
        });

        // Initialize
        updateUI();
    </script>
</body>
